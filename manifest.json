{
  "manifest_version": 2,
	"name": "LocoHost",
  "version" : "0.0.1",
  "description": "Quick links to localhost at various ports",
   "browser_action": {
   	"default_icon" : "icon128.png",
    "default_title" : "LocoHost",
    "default_popup": "popup.html"
	},
  "icons": { 
    "16":  "icon16.png",
    "48":  "icon48.png",
    "64":  "icon64.png",
    "128": "icon128.png" 
  },
	
	"permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "options_page": "options.html",
  "author": "Gordon B. Isnor",
  "short_name": "LocoHost"
}